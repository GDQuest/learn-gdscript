	reset()

func reset():
	_turtle.reset()
	_turtle.position = -Vector2(217, 57) / 2

func run() -> void:
	reset()
	_turtle.move_forward(length)
	_turtle.turn_right(turn)
	_turtle.move_forward(length)
	_turtle.turn_left(turn)
	_turtle.move_forward(length)
	_turtle.play_draw_animation()
