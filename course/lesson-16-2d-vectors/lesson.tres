question = "How would you move the robot 50 pixels to the left?"
content_bbcode = "To move the robot to the left by 50 pixels, you'd need to reduce [code]position.x[/code] by [code]50[/code]."
hint = ""
explanation_bbcode = "[code]position += Vector2(-50, 0)[/code] adds [code]-50[/code] to the sub-variable [code]x[/code].
[code]position -= Vector2(50, 0)[/code] subtracts [code]50[/code] to the sub-variable [code]x[/code].

[code]position.x -= Vector(50, 0)[/code] tries to subtract a vector to the sub-variable [code]x[/code], which isn't a vector. If you try to do this, you get an error."
answer_options = [ "position += Vector2(-50, 0)", "position -= Vector2(50, 0)", "position.x -= Vector(50, 0)" ]
valid_answers = [ "position += Vector2(-50, 0)", "position -= Vector2(50, 0)" ]
